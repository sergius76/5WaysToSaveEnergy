<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#33691E</item>
        <item name="colorAccent">#8BC34A</item>
    </style>
    <!-- Customize application theme. -->
    <style name="myTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#009688</item>

    <!-- Information Text Style Activity Main. -->
    </style>
    <style name="titleActivity">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#388E3C</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="headerTextOptions">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#388E3C</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Information Style Text Calculadora Activity. -->
    <style name="headerText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4CAF50</item>
    </style>
    <style name="simpleText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">#2E7D32</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!-- Value Style Calculadora Activity. -->
    <style name="valueText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2E7D32</item>
    </style>
</resources>
